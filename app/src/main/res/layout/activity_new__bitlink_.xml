<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lewissammons.bitlytest.New_Bitlink_Activity">


    <EditText
        android:id="@+id/newLinkEdit"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Enter Long URL:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/bufferBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/newLinkEdit"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/outputCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/bufferBox"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/newLinkEdit"
        android:onClick="sendBitlink" />
</android.support.constraint.ConstraintLayout>
